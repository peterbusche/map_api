<h1>Log In</h1>
<%= form_with url: login_path, local: true do |form| %>
  <p>
    <%= form.label :username %><br>
    <%= form.text_field :username %>
  </p>
  <p>
    <%= form.label :password %><br>
    <%= form.password_field :password %>
  </p>
  <p>
    <%= form.submit "Log In" %>
  </p>
<% end %>

<%= link_to "Back to Users", users_path, class: "btn btn-secondary" %>