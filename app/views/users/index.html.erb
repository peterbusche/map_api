<h1>Users</h1>
<ul>
  <% @users.each do |user| %>
    <li>
      <%= link_to user.username, user_path(user) %>
    </li>
  <% end %>
</ul>

<%= link_to "Create New User", new_user_path %>
<%= link_to "View All Images", images_path, class: "btn btn-secondary" %>

<% if session[:user_id] %>
  <!-- Show upload button only if logged in -->
  <%= link_to "Upload New Image", new_user_image_path(session[:user_id]), class: "btn btn-success" %>
  <%= link_to "Logout", logout_path, method: :delete, class: "btn btn-danger" %>
<% else %>
  <!-- Show login button if not logged in -->
  <%= link_to "Login", login_path, class: "btn btn-warning" %>
<% end %>